@media (max-width: 480px){
  
  .glossy-background {
    background: linear-gradient(
        to bottom right,
        rgba(0, 128, 128, 0.8),
        rgba(0, 128, 128, 0.4)
    ); /* Teal gradient for glossy effect */
    border: 1px solid rgba(255, 255, 255, 0.3); /* Light border */
    border-radius: 12px;
    padding: 20px;
    color: #fff; /* Text color */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Soft shadow */
    backdrop-filter: blur(10px); /* Adds a blur effect */
    position: relative;
    overflow: hidden;
}
.serch{
  margin-right: 0 !important;
}
.serch .btn-search span{
  display: none;
}

/* Optional: Add a subtle shine effect */
.glossy-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: -75%;
    width: 150%;
    height: 100%;
    background: rgba(255, 255, 255, 0.5);
    transform: skewX(-20deg);
    transition: 1s;
    filter: blur(10px);
    opacity: 0.3;
    animation: shine 3s infinite;
}

/* Keyframes for the animated shine effect */
@keyframes shine {
    0% {
        transform: translateX(-100%) skewX(-20deg);
    }
    100% {
        transform: translateX(100%) skewX(-20deg);
    }
}
