<% layout("/layouts/boilerplate")-%>
<style>
  /* Tablet Devices (768px and below) */
@media (max-width: 768px) {
    .col-8 {
        width: 100%;
        max-width: 100%;
        padding: 0 1rem;
    }

    .offset-2 {
        margin: 0;
    }

    .form-control {
        padding: 8px;
        font-size: 1rem;
    }

    .create-btn {
        font-size: 1rem;
        padding: 12px;
    }

    .new {
        margin-top: 1.5rem;
    }
}

/* Mobile Devices (480px and below) */
@media (max-width: 480px) {
    .form-label {
        font-size: 0.9rem;
    }

    .form-control {
        padding: 6px;
        font-size: 0.9rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .create-btn {
        font-size: 0.9rem;
        padding: 10px;
    }

    .new {
        margin-top: 1rem;
    }
    
    /* Adjust row layout for better stacking */
    .row {
        display: flex;
        flex-direction: column;
    }

    .col-md-8, .col-md-4 {
        width: 100%;
    }
}

</style>
<body>
<div class="row new">
    <div class="col-8 offset-2">
    <form action="/listings/create" method="post"  class="needs-validation" novalidate enctype="multipart/form-data"  >
        <div class="mb-3">
            <label for="title" class="form-label" >Title</label>
            <input 
            type="text" 
            class="form-control" 
            name="listing[title]" 
            placeholder="roudetra villa" 
            required>
            <div class="invalid-feedback">Title should be valid</div>
            <div class="valid-feedback">Title is good</div>
          </div>
          
          <div class="mb-3">
            <label for="description" class="form-label" >Description</label>
            <textarea 
            class="form-control" 
            rows="2" 
            name="listing[description]" 
            required
            ></textarea>
          <div class="invalid-feedback">Description must be added</div>
            <div class="valid-feedback">Well describe good job!</div>
          </div>
          
          <div class="mb-3">
            <label for="image" class="form-label" >Image</label>
            <input 
            type="file" 
            class="form-control" 
            name="listing[image]" 
            reqired 
            >
           
          </div>
         
          <div class="mb-3">
            <label for="location" class="form-label" >Location</label>
            <input 
            type="text" 
            class="form-control" 
            name="listing[location]" 
            placeholder="kerla" 
            required>
            <div class="invalid-feedback">Location should be valid</div>
            <div class="valid-feedback">Well located</div>
          </div>
          <div class="row ">
            <div class="col-md-8 ">
          <div class="mb-3">
            <label for="price" class="form-label" >Price</label>
            <input 
            type="number" 
            class="form-control" 
            name="listing[price]" 
            placeholder="73000" 
            required>
            <div class="invalid-feedback">Price should be valid</div>
            <div class="valid-feedback">Price is good</div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3">
            <label for="country" class="form-label" >Country</label>
            <input 
            type="text" 
            class="form-control" 
            name="listing[country]" 
            placeholder="india"
            required>
            <div class="invalid-feedback">Country name is reqired</div>
            <div class="valid-feedback">Amazing country</div>
          </div>
        </div>
        </div>
        <button class=" btn btn-dark create-btn">create</button>
    </form>
</div>
</div>
</body>
